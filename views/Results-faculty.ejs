<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/css/output.css" />
  <title>Dashboard</title>
</head>

<body>
  <% const total = attempted.length + unattempted.length; %>
  <div class="flex flex-col h-screen w-screen">
    <div class="flex flex-row justify-between items-end top-0 left-0 m-4 p-5 flex-grow-0">
      <div class="flex justify-start items-start">
        <img src="static/stats.png" alt="logo Results" class="w-10 md:w-15" />
        <div class="font-lexend text-2xl md:text-4xl font-bold ml-4 md:ml-5">
          Results
        </div>
      </div>
      <a class="font-encode-sans-semi-condensed font-light text-white bg-blue-500 rounded-2xl px-4 py-3" href="/create-form">
        Create Form
      </a>
    </div>
    <div class="flex-grow flex flex-col md:flex-row">
      <div class="flex flex-row md:flex-col md:w-1/3 md:h-screen w-full md:justify-evenly md:items-start justify-evenly items-baseline mt-2">
        <!-- Filters form -->
        <form action="/results-faculty?date=<%= dateParam %>" method="POST" class="flex flex-col gap-2 p-4">
          <label class="font-medium">Filter by Class:</label>
          <select name="classFilter" onchange="this.form.submit()" class="border p-2 rounded">
            <option value="" <%= classFilter === '' ? 'selected' : '' %>>All Classes</option>
            <% classes.forEach(c => { %>
            <option value="<%= c %>" <%= classFilter === c ? 'selected' : '' %>><%= c %></option>
            <% }) %>
          </select>
          <label class="font-medium">Filter by Department:</label>
          <select name="deptFilter" onchange="this.form.submit()" class="border p-2 rounded">
            <option value="" <%= deptFilter === '' ? 'selected' : '' %>>All Departments</option>
            <% departments.forEach(d => { %>
            <option value="<%= d %>" <%= deptFilter === d ? 'selected' : '' %>><%= d %></option>
            <% }) %>
          </select>
        </form>
      </div>
      <div class="h-full w-full flex flex-col justify-center items-center">
        <div class="border border-black w-4/5 h-full mb-4 flex flex-col justify-start items-center relative">
          <div class="font-lexendgiga md:text-2xl flex flex-row justify-start items-center m-5 md:m-8 absolute top-0 left-0">
            <p class="m-3 md:m-4">TOTAL</p>
            <p class="text-[#887676]"><%= total %></p>
          </div>
          <div class="w-full h-full flex flex-col items-center">
            <div class="flex md:mt-28 mt-20 flex-col items-center h-fit w-5/6">
              <div class="border-4 border-[#4E4B7A] h-fit w-full">
                <div class="font-lexendgiga md:text-xl flex flex-col justify-center items-center mt-3">
                  <p>Attempted</p>
                  <p class="text-[#887676]"><%= attempted.length %></p>
                </div>
                <div class="flex flex-row justify-evenly items-center mx-2 md:mx-3 font-lexendgiga">
                  <div class="w-1/2 flex flex-row justify-center items-center py-2">
                    <div>
                      <p>Register</p>
                      <p>Number</p>
                    </div>
                  </div>
                  <div class="w-1/2 justify-center items-center flex py-2">
                    Name
                  </div>
                </div>
              </div>
              <div class="w-full h-full font-lexendgiga">
                <ul class="flex flex-col items-center w-full">
                  <% attempted.forEach(student => { %>
                  <li class="flex p-5 w-full justify-around items-center">
                    <p class="w-full text-center"><%= student.regNo %></p>
                    <p class="w-full text-center"><%= student.name %></p>
                  </li>
                  <% }) %>
                </ul>
              </div>
              <div class="border-4 border-[#4E4B7A] h-fit w-full">
                <div class="font-lexendgiga md:text-xl flex flex-col justify-center items-center mt-3">
                  <p>Not Attempted</p>
                  <p class="text-[#887676]"><%= unattempted.length %></p>
                </div>
                <div class="flex flex-row justify-evenly items-center mx-2 md:mx-3 font-lexendgiga">
                  <div class="w-1/2 flex flex-row justify-center items-center py-2">
                    <div>
                      <p>Register</p>
                      <p>Number</p>
                    </div>
                  </div>
                  <div class="w-1/2 justify-center items-center flex py-2">
                    Name
                  </div>
                </div>
              </div>
              <div class="w-full h-full font-lexendgiga">
                <ul class="flex flex-col items-center w-full">
                  <% unattempted.forEach(student => { %>
                  <li class="flex p-5 w-full justify-around items-center">
                    <p class="w-full text-center"><%= student.regNo %></p>
                    <p class="w-full text-center"><%= student.name %></p>
                  </li>
                  <% }) %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>

</html>